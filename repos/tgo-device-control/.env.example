# TGO Device Control Service Configuration

# Service Info
SERVICE_NAME=TGO Device Control
SERVICE_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8085

# WebSocket Configuration
HEARTBEAT_INTERVAL=30
HEARTBEAT_TIMEOUT=90
WS_REQUEST_TIMEOUT=60

# Bind Code Configuration
BIND_CODE_LENGTH=6
BIND_CODE_EXPIRY_MINUTES=5

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8081
AI_SERVICE_TIMEOUT=30

# API Service Configuration
API_SERVICE_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/tgo
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/var/lib/tgo/device-control/screenshots
# STORAGE_S3_BUCKET=
# STORAGE_S3_ENDPOINT=
# STORAGE_S3_ACCESS_KEY=
# STORAGE_S3_SECRET_KEY=

# Security
SECRET_KEY=your-secret-key-at-least-32-chars-long

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
DEBUG=false

# ==========================================
# AgentOS Configuration (Computer Use Agent)
# ==========================================

# Enable/disable AgentOS server
AGENTOS_ENABLED=true

# AgentOS server port (for RemoteAgent access)
AGENTOS_PORT=7778
AGENTOS_HOST=0.0.0.0

# Computer Use Agent Configuration
# Model for planning and reasoning (requires vision capability)
PLANNING_MODEL=gpt-4o

# Grounding model backend: openai, uitars
GROUNDING_MODEL=openai

# External grounding model API URL (for UI-TARS, etc.)
# GROUNDING_MODEL_API_URL=http://localhost:8090/predict

# Maximum agent loop rounds
MAX_AGENT_ROUNDS=20

# OpenAI API Configuration (required for agent models)
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_BASE_URL=https://api.openai.com/v1
