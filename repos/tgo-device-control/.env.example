# TGO Device Control Service Configuration

# Service Info
SERVICE_NAME=TGO Device Control
SERVICE_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8085

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_HEARTBEAT_TIMEOUT=90
WS_REQUEST_TIMEOUT=60

# Bind Code Configuration
BIND_CODE_LENGTH=6
BIND_CODE_EXPIRY_MINUTES=5

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8081
AI_SERVICE_TIMEOUT=30

# API Service Configuration
API_SERVICE_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/tgo
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=/var/lib/tgo/device-control/screenshots
# STORAGE_S3_BUCKET=
# STORAGE_S3_ENDPOINT=
# STORAGE_S3_ACCESS_KEY=
# STORAGE_S3_SECRET_KEY=

# Security
SECRET_KEY=your-secret-key-at-least-32-chars-long

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
DEBUG=false
