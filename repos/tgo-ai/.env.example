# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/tgo_ai_service
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Application Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY_PREFIX=ak_
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8081
RELOAD=true
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://app.tgo-tech.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Environment
ENVIRONMENT=development

# Logging Configuration
LOG_FORMAT=json
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Health Check Configuration
HEALTH_CHECK_ENABLED=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PATH=/metrics

# API Documentation
DOCS_ENABLED=true
REDOC_ENABLED=true

# RAG Service Configuration
RAG_SERVICE_URL=http://localhost:8082/v1

# API Service Configuration
API_SERVICE_URL=http://localhost:8001

# Agent Runtime Service Configuration
AGENT_SERVICE_URL=http://localhost:8200

# Workflow Service
WORKFLOW_SERVICE_URL=http://localhost:8083/v1

# Testing Configuration (for test environment)
TEST_DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/tgo_ai_service_test

# Device Control AgentOS Configuration (Computer Use Agent)
DEVICE_CONTROL_AGENTOS_URL=http://localhost:7778
DEVICE_CONTROL_AGENT_ID=computer-use-agent
