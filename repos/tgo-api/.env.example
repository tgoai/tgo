# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/tgo_api

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# API Configuration
PROJECT_NAME=TGO-Tech API Service
PROJECT_DESCRIPTION=Core Business Logic Microservice
PROJECT_VERSION=0.1.0
API_V1_STR=/v1
API_BASE_URL=http://localhost:8000

STORE_SERVICE_URL=https://storeapi.tgo.ai
STORE_WEB_URL=https://store.tgo.ai

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0


# Kafka (for async message pipeline)
KAFKA_BOOTSTRAP_SERVERS=localhost:9094
KAFKA_TOPIC_INCOMING_MESSAGES=tgo.messages.incoming
KAFKA_TOPIC_AI_RESPONSES=tgo.ai.responses
KAFKA_CONSUMER_GROUP_AI_PROCESSOR=tgo-ai-processor
KAFKA_CONSUMER_GROUP_WUKONG_FORWARDER=tgo-wukong-forwarder
KAFKA_CONSUMER_GROUP_PLATFORM_FORWARDER=tgo-platform-forwarder

# RAG Service
RAG_SERVICE_URL=http://localhost:8082  # RAG service URL
RAG_SERVICE_TIMEOUT=30                 # Request timeout in seconds
RAG_SERVICE_API_KEY=optional_key       # Optional RAG service API key

# AI Service
AI_SERVICE_URL=http://localhost:8083   # AI service URL
AI_SERVICE_TIMEOUT=30                  # Request timeout in seconds
AI_SERVICE_API_KEY=optional_key        # Optional AI service API key

# MCP Service
MCP_SERVICE_URL=http://localhost:8003  # MCP service URL
MCP_SERVICE_TIMEOUT=30                 # Request timeout in seconds
MCP_SERVICE_API_KEY=optional_key       # Optional MCP service API key


# Platform Service (TGO Platform Service)
PLATFORM_SERVICE_URL=http://localhost:8003
PLATFORM_SERVICE_TIMEOUT=15
PLATFORM_SERVICE_API_KEY=optional_key

# Platform Sync
PLATFORM_SYNC_RETRY_INTERVAL_SECONDS=15
PLATFORM_SYNC_BATCH_LIMIT=50

# Vision Agent Service Configuration
VISION_AGENT_SERVICE_URL=http://localhost:8005

# Unknown Platform Fallback
UNKNOWN_PLATFORM_ID=00000000-0000-0000-0000-000000000000
UNKNOWN_PLATFORM_NAME=未知平台

# WuKongIM Service Configuration
WUKONGIM_SERVICE_URL=http://localhost:5001
WUKONGIM_SERVICE_TIMEOUT=10
WUKONGIM_ENABLED=true
WUKONGIM_DEVICE_FLAG=1
WUKONGIM_DEVICE_LEVEL=1

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/gif", "image/webp", "application/pdf", "text/plain"]

# Chat Upload Settings
UPLOAD_BASE_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10
ALLOWED_UPLOAD_EXTENSIONS=jpg,jpeg,png,gif,webp,pdf,doc,docx,txt,zip

# Environment
ENVIRONMENT=development
DEBUG=false
