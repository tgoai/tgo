# TGO Vision Agent - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string (async driver)
TGO_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/tgo

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis URL for caching and distributed locks
TGO_REDIS_URL=redis://localhost:6379/0

# =============================================================================
# AgentBay Configuration
# =============================================================================
# API key for Alibaba Cloud AgentBay (cloud phone/desktop automation)
# Get your key from: https://agentbay.aliyun.com
TGO_AGENTBAY_API_KEY=your_agentbay_api_key_here

# =============================================================================
# TGO API Configuration
# =============================================================================
# TGO API URL (main service)
TGO_API_URL=http://localhost:8000

# TGO API Internal Service URL (for fetching AI provider config)
# This should point to tgo-api's internal service port (default: 8001)
TGO_API_INTERNAL_URL=http://localhost:8001

# =============================================================================
# TGO Platform Configuration (for message callbacks)
# =============================================================================
# TGO Platform URL - used for notifying about new messages
TGO_PLATFORM_URL=http://localhost:8003

# =============================================================================
# Security Configuration
# =============================================================================
# Encryption key for storing sensitive data (API keys) in database
# Generate a random string, e.g.: openssl rand -hex 32
# If not set, a derived key will be used (not recommended for production)
TGO_ENCRYPTION_KEY=your_random_encryption_key_here

# =============================================================================
# Application Configuration
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
TGO_LOG_LEVEL=INFO

# Default polling interval for message detection (in seconds)
TGO_DEFAULT_POLL_INTERVAL_SECONDS=10

# Path for storing screenshots (debugging purposes)
TGO_SCREENSHOT_STORAGE_PATH=./screenshots
